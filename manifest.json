{
  "manifest_version": 3,
  "name": "FOMOff",
  "description": "Mute manipulative shopping pressure tactics in real time.",
  "version": "0.1.3",
  "action": {
    "default_title": "FOMOff",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "service_worker": "background/service_worker.js"
  },
  "permissions": [
    "scripting",
    "storage",
    "tabs",
    "contextMenus",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_page": "ui/options/index.html",
  "side_panel": {
    "default_path": "ui/sidepanel/index.html"
  },
  "commands": {
    "toggle-inspector": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Toggle element inspector"
    },
    "toggle-site": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle FOMOff on this site"
    }
  }
}
